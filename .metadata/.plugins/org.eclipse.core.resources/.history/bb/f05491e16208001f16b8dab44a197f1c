	<% request.setCharacterEncoding("UTF-8");
	String id = (String)request.getParameter("id");
	String password = (String)request.getParameter("password");
	String email = (String)request.getParameter("email");
	String userName = (String)request.getParameter("userName");
	String ssn = (String)request.getParameter("ssn");
	String birthYear = (String)request.getParameter("birthYear");
	String birthMonth = (String)request.getParameter("birthMonth");
	String birthDay = (String)request.getParameter("birthDay");
	String[] hobbies = request.getParameterValues("hobby");
	String introduction = (String)request.getParameter("introduction");
	
	signupbean.setId(id);
	signupbean.setPassword(password);
	signupbean.setEmail(email);
	signupbean.setUserName(userName);
	signupbean.setSsn(ssn);
	signupbean.setBirthYear(birthYear);
	signupbean.setBirthMonth(birthMonth);
	signupbean.setBirthDay(birthDay);
	signupbean.setHobby(hobbies);
	signupbean.setIntroduction(introduction);
%>

